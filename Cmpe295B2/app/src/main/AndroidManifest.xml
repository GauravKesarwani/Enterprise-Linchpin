<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cmpe295b" >
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/linchpin"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".LeaveRequest"
            android:label="@string/title_activity_leave_request" >
        </activity>
        <activity
            android:name=".CompensationActivity"
            android:label="@string/title_activity_compensation" >
        </activity>
        <activity
            android:name=".TeamInfoActivity"
            android:label="@string/title_activity_team_info" >
        </activity>
        <activity
            android:name=".ExperienceActivity"
            android:label="@string/title_activity_experience" >
        </activity>
        <activity
            android:name=".PerformanceActivity"
            android:label="@string/title_activity_performance" >
        </activity>
        <activity
            android:name=".DirectoryActivity"
            android:label="@string/title_activity_directory" >

        </activity>
        <activity
            android:name=".SearchDirectoryActivity"
            android:label="@string/title_activity_search_directory" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".activities.SearchDirectoryActivity"/>
        </activity>
    </application>

</manifest>
